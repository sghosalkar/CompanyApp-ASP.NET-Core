@model CompanyApp.Models.User

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<h4>Employee SignIn</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="SignIn">
            @{
                if (TempData["errorMessage"] != null)
                {
                    <span>@TempData["errorMessage"]</span>
                }
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" required />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" pattern="[A-Za-z\d]{4,}" maxlength="16" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create">Create a new account</a> |
    <a asp-action="List">List All Employees</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

